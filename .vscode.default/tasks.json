{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PHP Clean",
      "type": "shell",
      "command": "phpcbf",
      "args": [
        "--standard=Drupal",
        "--ignore-annotations",
        "--tab-width=2",
        "-vvv", // very verbose
        "${file}"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}